<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SegmentControl">
        <attr name="cornerRadius" format="dimension|reference" />
        <attr name="colors" format="color|reference" />
        <attr name="texts" format="string|reference" />
        <attr name="android:textSize" />
        <attr name="direction" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="gaps" format="dimension|reference" />
        <attr name="horizonGap" format="dimension|reference" />
        <attr name="verticalGap" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="SettingItemView">
        <attr name="itemIcon" format="reference" />
        <attr name="itemTitle" format="string|reference" />
        <attr name="itemSummary" format="string|reference" />
        <attr name="itemSummaryColor" format="color|reference" />
        <attr name="itemUnderLine" format="boolean" />
        <attr name="itemSwitch" format="boolean" />
        <attr name="itemRightArrow" format="boolean" />
    </declare-styleable>

</resources>