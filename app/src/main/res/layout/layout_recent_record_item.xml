<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:layout_marginTop="1dp"
    app:cardCornerRadius="4dp"
    app:elevation="1dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_recent_record_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="12"
            android:textSize="14sp"
            android:textColor="@color/textPrimary"
            />

        <ImageView
            android:id="@+id/iv_recent_record_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="4dp"
            android:src="@mipmap/ic_remove"
            />

        <com.zhaoyan.ladderball.ui.view.SizeAdjustTextView
            android:id="@+id/tv_recent_record_event"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_recent_record_remove"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="传球成功"
            android:singleLine="true"
            android:textSize="14sp"
            android:textColor="@color/textPrimary"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>
