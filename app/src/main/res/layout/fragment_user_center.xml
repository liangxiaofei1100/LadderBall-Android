<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    tools:context="com.zhaoyan.ladderball.ui.fragments.UserCenterFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.zhaoyan.ladderball.ui.view.SettingItemView
                android:id="@+id/siv_username"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:itemTitle="手机号"
                app:itemRightArrow="false"
                >
            </com.zhaoyan.ladderball.ui.view.SettingItemView>

            <com.zhaoyan.ladderball.ui.view.SettingItemView
                android:id="@+id/siv_phone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:itemTitle="实名姓名"
                app:itemRightArrow="false"
                >
            </com.zhaoyan.ladderball.ui.view.SettingItemView>

            <com.zhaoyan.ladderball.ui.view.SettingItemView
                android:id="@+id/siv_address"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:itemTitle="地区"
                app:itemRightArrow="false"
                >
            </com.zhaoyan.ladderball.ui.view.SettingItemView>

            <com.zhaoyan.ladderball.ui.view.SettingItemView
                android:id="@+id/siv_gender"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:itemTitle="性别"
                app:itemRightArrow="false"
                >
            </com.zhaoyan.ladderball.ui.view.SettingItemView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_marginTop="32dp"
                >
                <com.zhaoyan.ladderball.ui.view.SettingItemView
                    android:id="@+id/siv_modify_pw"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    app:itemTitle="修改密码"
                    app:itemUnderLine="false"
                    >
                </com.zhaoyan.ladderball.ui.view.SettingItemView>
            </FrameLayout>

            <Button
                android:id="@+id/btn_exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="退出登录"
                />
        </LinearLayout>
    </ScrollView>

</FrameLayout>
